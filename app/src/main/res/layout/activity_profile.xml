<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ProfileActivity">

    <!-- TODO: Update blank fragment layout -->
    <ImageView
        android:id="@+id/imProfile"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:backgroundTint="@color/bambooz_orange"
        android:background="@drawable/ic_baseline_account_circle_24"/>

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imProfile"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="Mon Profil"
        android:textColor="@color/bambooz_orange"
        android:textSize="20sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/tvTitle"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/bambooz_button_round"
        android:orientation="vertical">

        <TextView
            android:id="@+id/nameData"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginVertical="20dp"
            android:text="textView"
            android:textColor="@color/white"
            android:textSize="15sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/nameData"
            android:layout_alignParentBottom="true"
            android:layout_margin="20dp"
            android:background="@drawable/bambooz_button_round"
            android:backgroundTint="@color/white"
            android:orientation="vertical">

            <TextView
                android:id="@+id/points"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_marginHorizontal="20dp"
                android:layout_marginVertical="10dp"
                android:drawableLeft="@drawable/ic_baseline_star_24"
                android:drawablePadding="20dp"
                android:drawableTint="@color/black"
                android:text="150 Points"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/followers"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_marginHorizontal="20dp"
                android:layout_marginVertical="10dp"
                android:drawableLeft="@drawable/ic_peoples"
                android:drawablePadding="20dp"
                android:drawableTint="@color/black"
                android:text="30 AbonnÃ©s"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/follows"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_marginHorizontal="20dp"
                android:layout_marginVertical="10dp"
                android:drawableLeft="@drawable/ic_peoples"
                android:drawablePadding="20dp"
                android:drawableTint="@color/black"
                android:text="150 Abonnements"
                android:textColor="@color/black"
                android:textSize="15sp" />
        </LinearLayout>


    </LinearLayout>

</RelativeLayout>